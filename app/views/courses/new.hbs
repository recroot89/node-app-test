<h1>New course</h1>

{{#if error}}
  <p class="alert">{{error}}</p>
{{/if}}

<form action="/courses" method="post">
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter the name"></span>
  </div>
  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required min="1" value="{{data.price}}">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter the price"></span>
  </div>
  <div class="input-field">
    <input id="image" name="image" type="text" class="validate" required value="{{data.image}}">
    <label for="image">Image URL</label>
    <span class="helper-text" data-error="Enter the url"></span>
  </div>
  <div class="input-field">
    <input id="description" name="description" type="text" class="validate" required value="{{data.description}}">
    <label for="description">Description</label>
    <span class="helper-text" data-error="Enter the description"></span>
  </div>
  <button class="btn btn-primary">Add course</button>
</form>
