<h1>New course</h1>

<form action="/course" method="POST">
  <div class="input-field">
    <input id="title" type="text" class="validate" required>
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter the name"></span>
  </div>
  <div class="input-field">
    <input id="price" type="text" class="validate" required min="1">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter the price"></span>
  </div>
  <div class="input-field">
    <input id="image" type="text" class="validate" required>
    <label for="image">Image URL</label>
    <span class="helper-text" data-error="Enter the url"></span>
  </div>
  <button type="submit" class="btn btn-primary">Add course</button>
</form>
